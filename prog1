#include <iostream>
using namespace std;
#include <math.h>

int main()
{
	printf_s(
			"***********************************************************\n\
			*Nizhniy Novgorod Technical University*\n\
			* Study work number 2. Task number 1. *\n\
			*Performed student 21IVT-2 Komarova Ekaterina*\n\
			***********************************************************\n"
			);

	double n, P, k;
	P = 1;
	n = 0.1;
	for (n; n < 10.1; n += 0.1)
	{
		k = 1 + sin(n);
		P = P * k;
	}

	cout << P; 

	return 0;
}
